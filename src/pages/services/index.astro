---
// Import necessary components
import MainLayout from "../../layouts/MainLayout.astro";
import MainSection from "../../components/ui/blocks/MainSection.astro";
import RightSection from "../../components/ui/blocks/RightSection.astro";
// import FeaturesStats from "../components/sections/features/FeaturesStats.astro";

// Import necessary images
import webDevelopment from "./images/_web-development.avif";
import seo from "./images/_seo.avif";
import design from "./images/_design.avif";
import marketing from "./images/_marketing.avif";



interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Website Development: Crafting Digital Excellence",
    subTitle:
      "Navigating the digital landscape can be daunting. With our web development expertise, we empower you to achieve online success seamlessly. From conceptualization to launch, our seasoned professionals provide personalized guidance on platform selection, user experience optimization, and adherence to industry standards, ensuring your digital presence stands out.",
    single: false,
    imgOne: webDevelopment,
    imgOneAlt: "webDevelopment and digital tablet with construction plans.",
    imgTwo: webDevelopment,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "SEO: Unlocking Online Potential",
    subTitle:
      "Embarking on an SEO journey can feel like diving into a vast ocean of data. With our expert guidance, we navigate the currents of search engine optimization, steering your digital presence towards success. Whether you're a newcomer or seasoned player, our team provides tailored strategies, keyword analysis, and performance tracking, ensuring your website rises above the waves of competition.",
    single: false,
    imgOne: seo,
    imgOneAlt: "webDevelopment and digital tablet with construction plans.",
    imgTwo: seo,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: true,
    title: "Design: Crafting Visual Excellence",
    subTitle:
      " Embarking on a design project can be like navigating a maze of aesthetics and functionality. With our expert guidance, we illuminate the path to stunning visual solutions. Whether you're refining an existing brand or creating something entirely new, our design team offers tailored advice on aesthetics, user experience, and brand identity, ensuring your vision captivates and resonates with your audience.",
    single: false,
    imgOne: design,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: design,
    imgTwoAlt: "Aerial view of managed construction",
  },
  {
    isRightSection: false,
    title: "Marketing: Igniting Success",
    subTitle:
      "Embarking on a marketing journey can feel like entering a labyrinth of strategies and tactics. With our expert guidance, we illuminate the path to success, leveraging data-driven insights and innovative techniques. Whether you're seeking to increase brand awareness or drive conversions, our marketing team provides tailored solutions, from comprehensive campaigns to targeted messaging, ensuring your message reaches the right audience at the right time, sparking lasting connections and driving business growth.",
    single: false,
    imgOne: marketing,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: marketing,
    imgTwoAlt: "Aerial view of managed construction",
  },

];
---

<MainLayout title="Services | ScrewFast">
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Elevating Your Brand with Our Multi-Disciplinary Approach"
    subTitle="Welcome to ScrewFast, where innovation meets execution. Our integrated team of experts is poised to amplify your online presence and business success through SEO, marketing, web development, and design solutions. Let's bring your vision to life, together."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
    <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
